@{
    ViewData["Title"] = "Edit";
}
@model RentalMgtSystem.Models.Dto.TenantContractDto
<style>
    body {
        
        background-color: #f9f9f9;
       
    }

</style>

<div class="form-container">
    <form method="post">
        <div class="form-group">
            <label asp-for="TenantName" class="control-label"></label>
            <input asp-for="TenantName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RentalAmount" class="control-label"></label>
            <input asp-for="RentalAmount" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="UnitName" class="control-label"></label>
            @Html.DropDownListFor(
                     model => model.UnitName,
                     (IEnumerable<SelectListItem>)ViewData["Units"],
                     "Please Select Unit",
                     new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="Details" class="control-label"></label>
            <input asp-for="Details" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>   
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>        
        <div class="form-group">
            <label asp-for="ElectricityBased" class="control-label"></label>

            @Html.DropDownListFor(model => model.ElectricityBased,
                     new SelectList(Model.ElectricityBasedValues, "Value", "Text"),
                     "Please select",
                     new { @class = "form-control" })
        </div>

        <div class="form-actions">
            <input type="submit" value="Save" asp-action="Edit" asp-controller="TenantContract" class="btn btn-primary" />
            <input type="submit" value="Back" asp-action="Index" asp-controller="TenantContract" class="btn btn-secondary" />
            
        </div>
    </form>
</div>