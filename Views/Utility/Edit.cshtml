@{
    ViewData["Title"] = "Edit";
}
@model RentalMgtSystem.Models.Utility
<div class ="form-container">
   
    <form method="post">
        <div class="form-group">           
            <input asp-for="UtilityID" class="form-control" type="hidden"/>
        </div>
        <div class="form-group">
            <label asp-for="UtilityType" class="control-label"></label>
            <input asp-for="UtilityType" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="UtilityAccountNo" class="control-label"></label>

            @Html.DropDownListFor(model =>
                     model.UtilityAccountNo,
                     (IEnumerable<SelectListItem>)ViewData["UtilityAccount"],
                     "Please Select",
                     new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="BillingDate" class="control-label"></label>
            @Html.TextBoxFor(model => model.BillingDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>
        <div class="form-group">
            <label asp-for="BillingAmount" class="control-label"></label>
            <input asp-for="BillingAmount" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MainMeterReading" class="control-label"></label>
            <input asp-for="MainMeterReading" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SubmeterReading" class="control-label"></label>
            <input asp-for="SubmeterReading" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PaymentDate" class="control-label"></label>
            @Html.TextBoxFor(model => model.PaymentDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
        </div>
        <div class="form-actions">
            <input type="submit" value="Save" asp-action="Edit" asp-controller="Utility" class="btn btn-primary" />
            <input type="submit" value="Back" asp-action="Index" asp-controller="Utility" class="btn btn-secondary" />

        </div>
    </form>

</div>

