
@{
    ViewData["Title"] = "Add New";
}
@model RentalMgtSystem.Models.Dto.UtilityDto
<div class="form-container">
    <h5 class="text-center">Create New Utility</h5>
    <form method="post">

        <div class="form-group">
            <label asp-for="UtilityType" class="control-label"></label>
            
            @Html.DropDownListFor(model => 
                model.UtilityType,
                new SelectList(Model.UtilityTypeValues,"Value", "Text"),
                "Please Select",
                new { @class="form-control"})
        </div>
        <div class="form-group">
            <label asp-for="BillingDate" class="control-label"></label>
            <input asp-for="BillingDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="BillingAmount" class="control-label"></label>
            <input asp-for="BillingAmount" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MainMeterReading" class="control-label"></label>
            <input asp-for="MainMeterReading" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SubmeterReading" class="control-label"></label>
            <input asp-for="SubmeterReading" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PaymentDate" class="control-label"></label>
            <input asp-for="PaymentDate" class="form-control" />
        </div>
        <div class="form-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

