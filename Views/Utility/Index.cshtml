@{
    ViewData["Title"] = "Utility";
}


@model IEnumerable<RentalMgtSystem.Models.Utility>

<style>

</style>
<div class="form-container form-list">
    <h3>List of Utilities</h3>
    <a asp-action="Create">+ Add New</a>
    <table class="list-items">
        <thead>
            <tr>
                <th>
                    Utility Id
                </th>
                <th>
                    @Html.ActionLink("Utility Type", "Index", new { sortOrder = ViewData["UTSortParam"] })
                </th>
                <th>Account No. </th>
                <th>
                    @Html.ActionLink("Billing Date", "Index", new { sortOrder = ViewData["BDSortParam"] })
                </th>
                <th>
                    @Html.ActionLink("Billing Amount", "Index", new { sortOrder = ViewData["BASortParam"] })
                </th>
                <th>
                    Main Meter Reading
                </th>
                <th>Submeter Reading</th>
                <th>Payment Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var utility in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(modelname => utility.UtilityID)</td>
                    <td>@Html.DisplayFor(modelname => utility.UtilityType)</td>
                    <td>@Html.DisplayFor(modelname => utility.UtilityAccountNo)</td>
                    <td>@Html.DisplayFor(modelname => utility.BillingDate)</td>
                    <td>@Html.DisplayFor(modelname => utility.BillingAmount)</td>
                    <td>@Html.DisplayFor(modelname => utility.MainMeterReading)</td>
                    <td>@Html.DisplayFor(modelname => utility.SubmeterReading)</td>
                    <td>@Html.DisplayFor(modelname => utility.PaymentDate)</td>
                    <td>
                        <a asp-route-id="@utility.UtilityID" asp-action="Edit">Edit</a> |
                        <a asp-route-id="@utility.UtilityID" asp-action="Delete" method="post">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  
    @if (TempData["Message"] != null)
    {
        <div class="text-success">@TempData["Message"]</div>
    }
</div>
